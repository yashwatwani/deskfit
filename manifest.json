{
    "manifest_version": 3,
    "name": "DeskFit",
    "version": "1.0",
    "description": "Your personal wellness assistant for Pomodoro, stretching, and hydration.",
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "gifs/*",             // Wildcard for all gifs
          "icons/*",            // Wildcard for all icons
          "*.html",             // Wildcard for all html files at root
          "*.js"                // Wildcard for all js files at root (except background)
        ],
        "matches": ["<all_urls>"] // Or even more specifically: ["chrome-extension://[YOUR_EXTENSION_ID]/*"] but <all_urls> should be fine for now
      }
    ]
  }