{
    "manifest_version": 3,
    "name": "DeskFit",
    "version": "1.0.0",
    "description": "Your personal wellness assistant for Pomodoro, stretching, and hydration.",
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "gifs/*",
          "icons/*",
          "*.html",
          "*.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }