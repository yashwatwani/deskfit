{
    "manifest_version": 3,
    "name": "WellnessMax",
    "version": "1.0",
    "description": "Your personal wellness assistant for Pomodoro, stretching, and hydration.",
    "permissions": [
      "storage",        // To save user data and settings
      "alarms",         // For timed events (Pomodoro, stretches, water)
      "notifications",  // To show alerts
      "tabs"            // To open new tabs for stretch/exercise display
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "gifs/stretching/*",
          "gifs/exercise/*",
          "stretch_display.html",
          "stretch_display.js",
          "exercise_display.html",
          "exercise_display.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }